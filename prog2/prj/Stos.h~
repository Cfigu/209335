#ifndef STOS_H
#define STOS_H

#include <iostream>
#include <string>

/*!
*\file
*\brief Plik naglowkowy Stos.h
*
*Zawiera definicje struktury Element oraz definicje klasy Stos
*/

/*!
 *\brief Modeluje strukture Element
 *
 *Strukura Element zawiera wskaznik na kolejkny element stosu oraz wartosc typu int
*/	

struct Element          
{
    Element *next;     
    int wartosc;       
};

/*!
 *\brief Modeluje pojecie klasy Stos
 *
 *Klasa zawiera prywatnie wskaznik na poczatek stosu.
* Publlicze sa takie elementy jak: konstruktor, destruktor oraz wszystkie metody.
*/

class Stos
{
private:
    Element *S;         // wskaznik na poczatek listy

public:
    Stos();             // konstruktor
    ~Stos();            // destruktor
    bool empty_s();       // sprawdzenie czy stos jest pusty
    Element *top();     // zwrocenie wartosci na szczycie stosu
    void push_s(int v);   // zapis na stos
    void pop_s();         // usuniecie ze stosu
    void wyswietl_s();    // wyswietlenie stosu
};


#endif // STOS_H
