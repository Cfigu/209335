#include "../inc/operacja.h"
#include <stack>
#include <queue>
#include <list>

clock_t operacja(std::vector<int> &wektor, unsigned int ilosc_operacji)
{
	clock_t czas;
	arr::Lista sztos;
	
	for(unsigned int i = 0; i < ilosc_operacji; ++i)
		sztos.insert(wektor[i], 0);
	// Zapisanie czasu wykonywania operacji
	czas = clock();
	// Zwalnianie pamiÄ™ci, nie liczone przez zegar.
	//for(int i = sztos.size(); i > 0; --i)
	//	sztos.erase(0);

	return czas;
}

void operacja_licz_qs( Lista A, int roz)
{
  int p=0;
  clock_t czasA, czasB;
  clock_t t[10];

  for(int j=0; j<10;++j)
    {
      
      for(int i=roz; i>-1; i--)
      	A.insert(i,-(i-roz));
      
      czasA = clock();
      
      A.sortuj(p,roz);
      
      czasB = clock();
      
      t[j]= (double)(czasB-czasA)/CLOCKS_PER_SEC;
      
      for(int k=0; k<roz;++k)
	A.erase(k);
      
      std::cout << t[j] << std::endl;
    }
