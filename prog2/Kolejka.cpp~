#include "Kolejka.h"

using namespace std;


//---------------------
// Metody obiektu queue
//---------------------

// Konstruktor - tworzy pustą listę
//---------------------------------
Kolejka::Kolejka()
{
  poczatek = koniec = NULL;
}

// Destruktor - usuwa listę z pamięci
//-----------------------------------
Kolejka::~Kolejka()
{
  while(poczatek)
    {
    pop_k();
    }
}

// Sprawdza, czy kolejka jest pusta
//---------------------------------
bool Kolejka::empty_k(void)
{
  return !poczatek;
}

// Zapisuje do kolejki
//--------------------
void Kolejka::push_k(int v)
{
  Ekolejka * p = new Ekolejka;
  p->next = NULL;
  p->wartosc = v;
  if(koniec)
    {
      koniec->next = p;
    }
  else
    { 
      poczatek = p;
    }
  koniec = p;
}

// Usuwa z kolejki
//----------------
void Kolejka::pop_k(void)
{
  if(poczatek)
  {
    Ekolejka * p = poczatek;
    poczatek = poczatek->next;
    if(!poczatek) koniec = NULL;
    delete p;
  }
}

